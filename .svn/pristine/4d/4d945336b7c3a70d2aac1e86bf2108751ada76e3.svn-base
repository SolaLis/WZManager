<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_sqbmx_shzt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="30dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="@color/color_b5" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_sqbmx_shzt_zd"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/shape_round_textview"
                android:gravity="center"
                android:text="制单"
                android:textColor="@color/deal_text" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:background="@color/color_b5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_sqbmx_shzt_dsz"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/shape_round_textview"
                android:gravity="center"
                android:text="待审\n中"
                android:textColor="@color/deal_text" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:background="@color/color_b5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_sqbmx_shzt_shz"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/shape_round_textview"
                android:gravity="center"
                android:text="审核\n中"
                android:textColor="@color/deal_text" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:background="@color/color_b5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_sqbmx_shzt_shwc"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/shape_round_textview"
                android:gravity="center"
                android:text="审核\n完成"
                android:textColor="@color/deal_text" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:background="@color/color_b5" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>