    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                style="@style/ListTextView_1"
                android:text="序号" />
            <include layout="@layout/fgx"></include>
            <gjp.com.wzmanager.ui.CHScrollView1
                android:id="@+id/item_scroll_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/red"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                <TextView
                    style="@style/ListTextView_1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="物料编码" />
                    <include layout="@layout/fgx"></include>
                <TextView
                    style="@style/ListTextView_1"
                    android:layout_width="@dimen/item_name"
                    android:layout_height="wrap_content"
                    android:text="名称" />
                    <include layout="@layout/fgx"></include>
                <TextView
                    style="@style/ListTextView_1"
                    android:layout_width="@dimen/item_name"
                    android:layout_height="wrap_content"
                    android:text="规格" />
                    <include layout="@layout/fgx"></include>
                <TextView
                    style="@style/ListTextView_1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="拼音码" />
                    <include layout="@layout/fgx"></include>
                <TextView
                    style="@style/ListTextView_1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="单位" />
                    <include layout="@layout/fgx"></include>
                <TextView
                    style="@style/ListTextView_1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="数量" />
                    <include layout="@layout/fgx"></include>
                <TextView
                    style="@style/ListTextView_1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="件数" />
                    <include layout="@layout/fgx"></include>
                <TextView
                    style="@style/ListTextView_1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="单价" />
                    <include layout="@layout/fgx"></include>
                <TextView
                    style="@style/ListTextView_1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="金额" />
                    <include layout="@layout/fgx"></include>
                <TextView
                    style="@style/ListTextView_1"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="备注" />
                    <include layout="@layout/fgx"></include>
                <TextView
                    style="@style/ListTextView_1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="入库数量" />
                    <include layout="@layout/fgx"></include>
                <TextView
                    style="@style/ListTextView_1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="入库件数" />
                    <include layout="@layout/fgx"></include>
                <TextView
                    style="@style/ListTextView_1"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="入库数量(占用)" />
                    <include layout="@layout/fgx"></include>
                <TextView
                    style="@style/ListTextView_1"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="入库件数(占用)" />
                    <include layout="@layout/fgx"></include>
                <TextView
                    style="@style/ListTextView_1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="已退数量" />
                    <include layout="@layout/fgx"></include>
                <TextView
                    style="@style/ListTextView_1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="已退件数" />
                    <include layout="@layout/fgx"></include>
                <TextView
                    style="@style/ListTextView_1"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="已退数量(占用)" />
                    <include layout="@layout/fgx"></include>
                <TextView
                    style="@style/ListTextView_1"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="已退件数(占用)" />
                </LinearLayout>
            </gjp.com.wzmanager.ui.CHScrollView1>
        </LinearLayout>

        <!--分割线-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_cgsq"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_query3"></android.support.v7.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>
